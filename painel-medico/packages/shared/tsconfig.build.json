  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": false,
    "noEmit": false
