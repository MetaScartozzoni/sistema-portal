###############################################
# PORTAL LOGIN - .env.example                  #
###############################################

# 🚪 ENDPOINTS UTILIZADOS PELO PORTAL LOGIN
# === AUTENTICAÇÃO ===
# POST /auth/login - Login do usuário
# POST /auth/logout - Logout do usuário
# POST /auth/refresh - Renovar token
# POST /auth/forgot-password - Esqueci minha senha
# POST /auth/reset-password - Redefinir senha

# === REGISTRO/CRIAÇÃO DE CONTA ===
# POST /auth/register - Registrar novo usuário
# POST /auth/verify-email - Verificar email
# POST /auth/resend-verification - Reenviar verificação
# GET /auth/check-availability - Verificar disponibilidade

# === PERFIL BÁSICO ===
# GET /auth/profile - Dados básicos do usuário logado
# PUT /auth/profile - Atualizar dados básicos
# GET /auth/permissions - Permissões do usuário
# GET /auth/roles - Roles disponíveis

# === REDIRECIONAMENTO ===
# GET /auth/redirect-info - Informações para redirecionamento
# GET /portals/available - Portais disponíveis para o usuário
# POST /auth/portal-access - Registrar acesso ao portal
# GET /auth/session-status - Status da sessão

# === RECUPERAÇÃO DE ACESSO ===
# POST /auth/unlock-account - Desbloquear conta
# POST /auth/change-password - Trocar senha
# GET /auth/security-questions - Perguntas de segurança
# POST /auth/validate-security - Validar resposta de segurança

# 🎯 FUNCIONALIDADES HABILITADAS
VITE_FEATURES=login,register,forgot_password,portal_selection

# 🔐 CONFIGURAÇÕES DE SEGURANÇA
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_FORGOT_PASSWORD=true
VITE_REQUIRE_EMAIL_VERIFICATION=true
VITE_ENABLE_2FA=false

# 🚀 REDIRECIONAMENTO
VITE_AUTO_REDIRECT_AFTER_LOGIN=true
VITE_SHOW_PORTAL_SELECTION=true
VITE_REMEMBER_LAST_PORTAL=true

VITE_API_BASE_URL=https://api.example.com/api
VITE_SUPABASE_URL=YOUR-SUPABASE-URL
VITE_SUPABASE_ANON_KEY=YOUR-SUPABASE-ANON-KEY
VITE_URL=${VITE_SUPABASE_URL}
VITE_ANON_KEY=${VITE_SUPABASE_ANON_KEY}
VITE_AUTH_DISABLED=false
VITE_FORCE_EXTERNAL_REDIRECT=true
VITE_PORT=3000

# Redirect mapping (exibir botões / redirecionar pós-login)
VITE_PORTAL_REDIRECT_MAP=admin:/painel-admin,secretary:/painel-secretaria,employee:/painel-funcionario,doctor:/painel-medico

# Portais dev
# >>> PORTAL URLS (SYNC BLOCK) >>>
VITE_PORTAL_LOGIN_URL=http://localhost:3000/painel-login
VITE_PORTAL_ADMIN_URL=http://localhost:3000/painel-admin
VITE_PORTAL_MEDICO_URL=http://localhost:3000/painel-medico
VITE_PORTAL_ORCAMENTO_URL=http://localhost:3000/painel-orcamento
VITE_PORTAL_SECRETARIA_URL=http://localhost:3000/painel-secretaria
VITE_PORTAL_FUNCIONARIO_URL=http://localhost:3000/painel-funcionario
VITE_PORTAL_BOT_URL=http://localhost:3000/painel-bot
# <<< PORTAL URLS (SYNC BLOCK) <<<

VITE_ENV_LABEL=local
