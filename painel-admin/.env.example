# API Backend base (incluir /api se exposto assim)
VITE_API_BASE_URL=https://api.example.com/api
VITE_API_TIMEOUT=30000

# Supabase (somente ANON / public)
VITE_SUPABASE_URL=YOUR-SUPABASE-URL
VITE_SUPABASE_ANON_KEY=YOUR-SUPABASE-ANON-KEY
## Alias (compatibilidade antiga)
VITE_URL=${VITE_SUPABASE_URL}
VITE_ANON_KEY=${VITE_SUPABASE_ANON_KEY}

# Auth / NavegaÃ§Ã£o
VITE_AUTH_DISABLED=false
VITE_DEFAULT_REDIRECT=/dashboard
VITE_GUEST_ROLE=guest
VITE_LOCK_PIN=1234
VITE_AUTH_PORTAL_URL=https://auth.example.com
VITE_PORT=3003

# Features
VITE_FEATURES=users,inbox,metrics,integrations,ai
VITE_INBOX_ENABLED=true
VITE_INBOX_ROLE=admin
VITE_INBOX_ENDPOINT=/api/admin/inbox
VITE_INBOX_CLAIM_ENDPOINT=/api/admin/inbox/:id/claim
VITE_INBOX_STATUS_ENDPOINT=/api/admin/inbox/:id/status
VITE_INBOX_METRICS_ENDPOINT=/api/admin/inbox/metrics

# Mensageria / Draft Assistido (somente chamadas via API backend)
VITE_MESSAGES_DRAFT_ENDPOINT=/api/messages/draft
VITE_MESSAGES_SEND_ENDPOINT=/api/messages/send
